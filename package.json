{
  "name": "luxe-headless-shopify",
  "version": "1.0.0",
  "description": "Luxury headless Shopify storefront with Next.js, TypeScript, and Tailwind CSS",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "cypress run",
    "test:open": "cypress open",
    "test:e2e": "cypress run --e2e",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@shopify/hydrogen-react": "^2023.10.0",
    "@shopify/storefront-api-client": "^0.2.0",
    "animejs": "^3.2.1",
    "clsx": "^2.0.0",
    "echarts": "^5.4.3",
    "framer-motion": "^10.16.4",
    "graphql": "^16.8.1",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.290.0",
    "next": "14.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.5.2",
    "react-use-measure": "^2.1.1",
    "sharp": "^0.32.6",
    "splide": "^4.1.4",
    "tailwind-merge": "^2.0.0",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@next/eslint-config-next": "14.0.1",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "autoprefixer": "^10.4.16",
    "cypress": "^13.4.0",
    "eslint": "^8.52.0",
    "eslint-config-next": "14.0.1",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check"
    }
  }
}